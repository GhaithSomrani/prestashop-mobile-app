# PrestaShop API Configuration
# Copy this file to .env and update with your actual values

# PrestaShop Store URL (without trailing slash)
PRESTASHOP_API_URL=https://yourstore.com/api

# PrestaShop Web Service API Key
# Generate this in your PrestaShop admin: Advanced Parameters > Webservice
PRESTASHOP_API_KEY=YOUR_API_KEY_HERE

# API Timeout (milliseconds)
API_TIMEOUT=30000

# App Configuration
APP_NAME=PrestaShop Mobile
APP_VERSION=1.0.0

# Currency Settings
CURRENCY_SYMBOL=\$
CURRENCY_CODE=USD

# Pagination
DEFAULT_PAGE_SIZE=20

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=100.00
STANDARD_SHIPPING_COST=9.99

# Tax Configuration
TAX_RATE=0.08

# Feature Flags
ENABLE_GUEST_CHECKOUT=true
ENABLE_WISHLIST=true
ENABLE_PRODUCT_REVIEWS=false

# Debug Settings
DEBUG_MODE=true
ENABLE_API_LOGGING=true

# Image Configuration
DEFAULT_PRODUCT_IMAGE=assets/images/placeholder_product.png
DEFAULT_CATEGORY_IMAGE=assets/images/placeholder_category.png

# Storage Keys (Do not change unless necessary)
AUTH_TOKEN_KEY=auth_token
USER_DATA_KEY=user_data
CART_KEY=cart_data
FAVORITES_KEY=favorites
